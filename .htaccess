# Activer la réécriture
RewriteEngine On

# Servir directement tout fichier/dossier réel (css, js, images, pdf, .php legacy si tapé direct, etc.)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Tout le reste passe au front-controller (pas de redirection, une seule réécriture)
RewriteRule ^ index.php [L,QSA]

# Pages d'erreur (facultatif si 403.php/404.php/500.php existent à la racine)
ErrorDocument 403 /403.php
ErrorDocument 404 /404.php
ErrorDocument 500 /500.php
